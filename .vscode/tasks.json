{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean All Projects",
            "type": "shell",
            "command": "mvn",
            "args": ["clean"],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
